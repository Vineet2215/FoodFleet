<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="87dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idImgFoodItems"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/idTVPrice"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="$5"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toEndOf="@+id/idTVFoodName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idTVAddToCart"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/addtocartshape"
            android:gravity="center"
            android:text="Add To Cart"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/idTVPrice"
            app:layout_constraintStart_toStartOf="@+id/idTVPrice"
            app:layout_constraintTop_toBottomOf="@+id/idTVPrice" />

        <TextView
            android:id="@+id/idTVFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Food Name"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/idImgFoodItems"
            app:layout_constraintStart_toEndOf="@+id/idImgFoodItems"
            app:layout_constraintTop_toTopOf="@+id/idImgFoodItems" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
